<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_text_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView 上拉下来刷新"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_list_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView 上拉下来刷新"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_recycler_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView 上拉下来刷新"
        android:textAllCaps="false" />

</LinearLayout>
